<Page x:Class="hotel.Pages.PageAddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddClient">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Name="menuBack" Header="Назад" Click="menuBack_Click"/>
        </Menu>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Orientation="Vertical" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя клиента:" Width="150"/>
                <TextBox Name="txbName" Width="150"/>
            </StackPanel>
            <Button Name="btnAdd" Content="Добавить" Width="120" Margin="5"
                    Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
