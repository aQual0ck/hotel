<Page x:Class="hotel.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox Name="txbUsername" Width="150"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <PasswordBox Name="psbPassword" Width="150"/>
            <Button Name="btnLogin" Content="Войти" Width="100" Margin="5" 
                    Click="btnLogin_Click"/>
            <TextBlock Name="tbWarning" Text="Вы ввели неверный логин или пароль. &#x0a;Пожалуйста проверьте еще раз &#x0a;введенные данные." 
                       Visibility="Hidden"/>
            <TextBlock Name="tbNoText" Text="Пожалуйста, введите логин и пароль" 
                       Visibility="Hidden"/>
            <TextBlock Name="tbTime"/>
        </StackPanel>
    </Grid>
</Page>
